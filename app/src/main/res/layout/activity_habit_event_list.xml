<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:background="@drawable/image6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#CFE2F8 "
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <ImageView
                android:id="@+id/backImage"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:clickable="true"
                android:contentDescription="@string/back_button"
                android:focusable="true"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:visibility="visible"
                app:tint="@color/white"
                tools:ignore="TouchTargetSizeCheck" />

            <ImageView
                android:id="@+id/addImage"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="343dp"
                android:layout_marginLeft="343dp"
                android:layout_marginTop="2dp"
                android:clickable="true"
                android:contentDescription="@string/add_button"
                android:focusable="true"
                android:src="@drawable/ic_baseline_add_circle_outline_24"
                android:visibility="invisible"
                app:tint="@color/white"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/title"

                android:layout_width="wrap_content"

                android:layout_height="48dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:layout_centerHorizontal="true"
                android:text="Event list "
                android:textColor="#5B9CEA "
                android:textSize="30sp"
                android:textStyle="bold|italic" />


        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/progress_bar"

        style="@android:style/Widget.ProgressBar.Large"
        android:theme="@android:style/Animation"
        android:layout_width="55dp"
        android:layout_height="66dp"
        android:layout_centerInParent="true"
        android:layout_marginEnd="356dp"
        android:layout_marginBottom="665dp"

        android:visibility="visible"
        tools:ignore="InvalidId" />

    <ListView
        android:id="@+id/habit_event_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp" />
</RelativeLayout>